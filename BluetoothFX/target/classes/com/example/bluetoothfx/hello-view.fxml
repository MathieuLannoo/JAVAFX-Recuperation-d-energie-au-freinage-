<?xml version="1.0" encoding="UTF-8"?>

<?import eu.hansolo.medusa.Gauge?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bluetoothfx.HelloController">
   <top>
      <MenuBar prefHeight="4.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox prefHeight="54.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#ConnectButton" text="Connect" />
             <Button fx:id="portail_bouton" onAction="#OpenButton" text="Ouvre le portail" />
            <ToggleButton fx:id="toggle_salon" mnemonicParsing="false" onAction="#Toggle_Button_Salon" text="Lumière Salon" />
            <ToggleButton fx:id="toggle_chambre" mnemonicParsing="false" onAction="#toogle_button_Chambre" text="Lumière Chambre" />
            <Button mnemonicParsing="false" onAction="#test_def" text="test" />
         </children>
      </HBox>
   </bottom>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Gauge fx:id="kmh" skinType="BAR" />
            <Gauge skinType="BATTERY" />
            <Gauge skinType="SIMPLE_SECTION" />
            <Gauge skinType="PLAIN_AMP" />
         </children>
      </HBox>
   </center>
</BorderPane>
