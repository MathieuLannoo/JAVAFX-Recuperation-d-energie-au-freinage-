<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bluetoothfx.HelloController">
   <center>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label fx:id="welcomeText" />
         <Button mnemonicParsing="false" onAction="#ConnectButton" text="Connect" />
          <Button fx:id="open_portail" onAction="#OpenButton" text="Ouvre le portail" />
         <ToggleButton fx:id="toggle_salon" mnemonicParsing="false" onAction="#Toggle_Button_Salon" text="Lumière Salon" />
         <ToggleButton fx:id="toggle_chambre" layoutX="363.0" layoutY="389.0" mnemonicParsing="false" onAction="#toogle_button_Chambre" text="Lumière Chambre" />
      </VBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
